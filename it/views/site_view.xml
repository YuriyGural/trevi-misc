<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data>

        <!-- Action for Buttons -->
        <record id="act_site_2_equipment" model="ir.actions.act_window">
            <field name="res_model">it.equipment</field>
            <field name="name">Assets</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_site_id': active_id }</field>
        </record>
        <record id="act_site_2_access" model="ir.actions.act_window">
            <field name="res_model">it.access</field>
            <field name="name">Credentials</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_site_id': active_id }</field>
        </record>

        <record model="ir.ui.view" id="it_site_tree">
            <field name="name">it.site.tree</field>
            <field name="model">it.site</field>
            <field name="arch" type="xml">
                <tree string="Sites">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="equipment_count" />
                    <field name="access_count" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="it_site_form">
            <field name="name">it.site.form</field>
            <field name="model">it.site</field>
            <field name="arch" type="xml">
                <form string="IT Site">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only oe_left">
                                <label for="name" />
                            </div>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button
                                name="%(act_site_2_equipment)d"
                                class="oe_inline oe_stat_button"
                                icon="fa-th-large"
                                type="action"
                                groups="it.group_it_user"
                            >
                                        <field
                                    name="equipment_count"
                                    widget="statinfo"
                                />
                            </button>
                            <button
                                name="%(act_site_2_access)d"
                                class="oe_inline oe_stat_button"
                                icon="fa-key"
                                type="action"
                                groups="it.group_it_user"
                            >
                                        <field name="access_count" widget="statinfo" />
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" />
                            </group>
                            <group>
                                <field
                                    name="company_id"
                                    string="Company"
                                    groups="base.group_multi_company"
                                />
                            </group>
                        </group>
                        <group string="Networks">
                            <field name="network_ids" nolabel="1">
                                <tree string="Networks" editable="bottom">
                                    <field name="site_id" invisible="1" />
                                    <field name="name" />
                                    <field name="domain" />
                                    <field name="netmask" />
                                    <field name="default_gw" />
                                    <field name="dns_ids" widget="many2many_tags" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="it_site_action" model="ir.actions.act_window">
            <field name="name">Sites</field>
            <field name="res_model">it.site</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="it_site_network_tree">
            <field name="name">it.site.network.tree</field>
            <field name="model">it.site.network</field>
            <field name="arch" type="xml">
                <tree string="Networks">
                    <field name="name" />
                    <field name="domain" />
                    <field name="netmask" />
                    <field name="default_gw" />
                    <field name="site_id" />
                    <field name="dns_ids" widget="many2many_tags" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="it_site_network_form">
            <field name="name">it.site.network.form</field>
            <field name="model">it.site.network</field>
            <field name="arch" type="xml">
                <form string="IT Network">
                    <sheet>
                        <group>
                            <group string="Network">
                                <field name="name" />
                                <field name="domain" />
                                <field name="netmask" />
                                <field name="default_gw" />
                                <field name="site_id" />
                            </group>
                            <group string="DNS">
                                <field name="dns_ids" nolabel="1">
                                    <tree string="DNS" editable="bottom">
                                        <field name="name" />
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="it_network_action" model="ir.actions.act_window">
            <field name="name">Networks</field>
            <field name="res_model">it.site.network</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            name="Sites"
            id="it_menu_sites"
            parent="it.menu_main_itm"
            groups="group_it_manager"
            sequence="20"
        />

        <menuitem
            action="it_site_action"
            id="it_site_menu"
            sequence="20"
            parent="it_menu_sites"
        />

        <menuitem
            action="it_network_action"
            id="it_network_menu"
            sequence="30"
            parent="it_menu_sites"
        />

    </data>
</odoo>
