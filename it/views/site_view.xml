<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <data>

        <!-- Action for Buttons -->
        <record id="act_site_2_equipment" model="ir.actions.act_window">
            <field name="res_model">it.equipment</field>
            <field name="name">Assets</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_site_id': active_id }</field>
        </record>
        <record id="act_site_2_access" model="ir.actions.act_window">
            <field name="res_model">it.access</field>
            <field name="name">Creds</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_site_id': active_id }</field>
        </record>

        <record model="ir.ui.view" id="it_site_tree">
            <field name="name">it.site.tree</field>
            <field name="model">it.site</field>
            <field name="arch" type="xml">
                <tree string="Sites">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="equipment_count"/>
                    <field name="access_count"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="it_site_form">
            <field name="name">it.site.form</field>
            <field name="model">it.site</field>
            <field name="arch" type="xml">
                <form string="IT Site">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only oe_left">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="%(act_site_2_equipment)d"
                                    class="oe_inline oe_stat_button"
                                    icon="fa-th-large"
                                    type="action">
                                        <field name="equipment_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="%(act_site_2_access)d"
                                    class="oe_inline oe_stat_button"
                                    icon="fa-key"
                                    type="action">
                                        <field name="access_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="partner_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="it_site_action" model="ir.actions.act_window">
            <field name="name">Sites</field>
            <field name="res_model">it.site</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="it_site_action" id="it_site" sequence="40" parent="it_menu_general"/>

    </data>
</odoo>
